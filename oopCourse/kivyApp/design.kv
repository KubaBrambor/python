<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            padding: 15, 15
            spacing: 20, 20
            Label:
                id: title
                text: "User Login"
                font_size: "20sp"
            TextInput:
                id: username
                hint_text: "Username"
                font_size: "25sp"
            TextInput:
                id: password
                hint_text: "Password"
                font_size: "25sp"
            RelativeLayout:
                Button:
                    text: "Login"
                    font_size: 0.2 * self.width
                    on_press: root.login(root.ids.username.text, root.ids.password.text)
                    size_hint: 0.4, 0.004 * self.width
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        GridLayout:
            cols: 2
            padding: 15, 15
            size_hint: 1, 0.3
            RelativeLayout:
                Button:
                    text: "Forgot Password?"
                    font_size: 0.12 * self.width
                    size_hint: 0.4, 0.003 * self.width
                    pos_hint: {'center_x': 0.2, 'center_y': 0.2}
                Button:
                    text: "Sign Up"
                    font_size: 0.12 * self.width
                    size_hint: 0.4, 0.003 * self.width
                    pos_hint: {'center_x': 0.8, 'center_y': 0.2}
                    on_press: root.sign_up()

<SignUpScreen>:
    GridLayout:
        cols: 1
        Label:
            text: "Sign up for app!"
        TextInput:
            id: username
            hint_text: "Username"
        TextInput:
            id: password
            hint_text: "Password"
        Button:
            text: "Sign up"
            on_press: root.add_user(root.ids.username.text, root.ids.password.text)

<SignUpScreenSuccess>:
    GridLayout:
        cols: 1
        Label: 
            text: "Sign up is successful!"
        Button:
            text: "Go to log in"
            on_release: 
                root.go_to_login()

<LoginScreenSuccess>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            Button:
                text: "Logout"
                on_press: root.log_out()
            Label:
                text: "How do you feel?"
        GridLayout:
            cols: 3
            Button:
                on_press: root.quote_generator("happy.txt")
                Image:
                    center: self.parent.center
                    source: 'images/smile.png'
                    # y: self.parent.y + self.parent.height - 150
                    # x: self.parent.x + 85
            Button:
                on_press: root.quote_generator("sad.txt")
                Image:
                    center: self.parent.center
                    source: 'images/sad2.png'
                    # y: self.parent.y + self.parent.height - 150
                    # x: self.parent.x + 85
            Button:
                on_press: root.quote_generator("unloved.txt")
                Image:
                    center: self.parent.center
                    source: 'images/loved.png'
                    # y: self.parent.y + self.parent.height - 150
                    # x: self.parent.x + 85
        GridLayout:
            cols: 1
            Label:
                id: quote_label
                text: ""
                size: 900, 100
                text_size: 700, 80



