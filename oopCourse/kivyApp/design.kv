<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            Label:
                id: title
                text: "User Login"
            TextInput:
                id: username
                hint_text: "Username"
            TextInput:
                id: password
                hint_text: "Password"
            Button:
                text: "Login"
                on_press: root.login(root.ids.username.text, root.ids.password.text)
        GridLayout:
            cols: 2
            Button:
                text: "Forgot Password?"
            Button:
                text: "Sign Up"
                on_press: root.sign_up()

<SignUpScreen>:
    GridLayout:
        cols: 1
        Label:
            text: "Sign up for app!"
        TextInput:
            id: username
            hint_text: "Username"
        TextInput:
            id: password
            hint_text: "Password"
        Button:
            text: "Sign up"
            on_press: root.add_user(root.ids.username.text, root.ids.password.text)

<SignUpScreenSuccess>:
    GridLayout:
        cols: 1
        Label: 
            text: "Sign up is successful!"
        Button:
            text: "Go to log in"
            on_release: 
                root.go_to_login()

<LoginScreenSuccess>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            Button:
                text: "Logout"
                on_press: root.log_out()
            Label:
                text: "How do you feel?"
        GridLayout:
            cols: 3
            Button:
                on_press: root.sad_face()
                Image:
                    source: 'images/sad.png'
                    y: self.parent.y + self.parent.height - 150
                    x: self.parent.x + 85
            Button:
                on_press: root.sad_face()
                Image:
                    source: 'images/sad.png'
                    y: self.parent.y + self.parent.height - 150
                    x: self.parent.x + 85
            Button:
                on_press: root.sad_face()
                Image:
                    source: 'images/sad.png'
                    y: self.parent.y + self.parent.height - 150
                    x: self.parent.x + 85
        GridLayout:
            cols: 1
            Label:
                id: quote_label
                text: ""
            


