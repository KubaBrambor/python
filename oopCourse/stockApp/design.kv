<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            Label:
                id: login_title
                text: "Login"
            TextInput:
                id: username
                hint_text: "Username"
            TextInput:
                id: password
                hint_text: "Password"
                password: True
            RelativeLayout:
                ImageButton:
                    size_hint: 0.7, 0.7
                    source: "images/loginOk.png" if self.hovered else "images/login.png"
                    on_press: root.login(username=root.ids.username.text, password=root.ids.password.text)

<MainScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 2
            padding: 10, 10
            size_hint: 1, 0.15
            RelativeLayout:
                Button:
                    text: "Your stocks"
                    background_color: 1,1,1,0
                    font_size: 0.14 * self.width
                    size_hint: 0.3, 0.3
                    pos_hint: {'center_x': 0.2, 'center_y': 0.8}
                    opacity: 1 if self.state == 'normal' else 0.5
                Button:
                    text: "Find stock"
                    color: "white" if self.hovered == 'normal' else "blue"
                    background_color: 1,1,1,0
                    font_size: 0.14 * self.width
                    size_hint: 0.3, 0.3
                    pos_hint: {'center_x': 0.8, 'center_y': 0.8}
                    opacity: 1 if self.state == 'normal' else 0.5
        GridLayout:
            cols: 1
            ScrollView:
                Label:
                    id: gridNews
                    text: ""
                    text_size: self.width, None
                    padding: 15, 15
                    size_hint_y: None
                    height: self.texture_size[1]

                