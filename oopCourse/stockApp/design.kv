<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            Label:
                id: login_title
                text: "Login"
            TextInput:
                id: username
                hint_text: "Username"
            TextInput:
                id: password
                hint_text: "Password"
                password: True
            RelativeLayout:
                ImageButton:
                    size_hint: 0.7, 0.7
                    source: "images/loginOk.png" if self.hovered else "images/login.png"
                    on_press: root.login(username=root.ids.username.text, password=root.ids.password.text)

<MainScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 3
            Button:
                text: "Your stocks"
                on_press: root.showStock()
            Button: 
                text: "Find stock"
            Button:
                text: "Wallet"
        GridLayout:
            cols: 1
            Label:
                id: apple
                text: "Stock news"
            Label:
                id: title1
                text: ""
            Label:
                id: text1
                text: ""
            Button:
                text: ""
                on_press: pass
            


                