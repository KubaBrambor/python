<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            Label:
                id: login_title
                text: "Login"
            TextInput:
                id: username
                hint_text: "Username"
            TextInput:
                id: password
                hint_text: "Password"
                password: True
            RelativeLayout:
                ImageButton:
                    size_hint: 0.7, 0.7
                    source: "images/loginOk.png" if self.hovered else "images/login.png"
                    on_press: root.login(username=root.ids.username.text, password=root.ids.password.text)

<MainScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 2
            padding: 10, 10
            size_hint: 1, 0.15
            RelativeLayout:
                Button:
                    markup: True
                    text: "[color=#428BFC][b]Your stocks[/b][/color]"
                    background_color: 1,1,1,0
                    font_size: 0.22 * self.width
                    size_hint: 0.3, 0.3
                    pos_hint: {'center_x': 0.2, 'center_y': 0.7}
                    opacity: 1 if self.state == 'normal' else 0.5
                Button:
                    markup: True
                    text: "[color=#428BFC][b]Find stock[/b][/color]"
                    background_color: 1,1,1,0
                    font_size: 0.22 * self.width
                    size_hint: 0.3, 0.3
                    pos_hint: {'center_x': 0.8, 'center_y': 0.7}
                    opacity: 1 if self.state == 'normal' else 0.5
                    on_press: root.findStock()
        GridLayout:
            cols: 1
            ScrollView:
                Label:
                    id: gridNews
                    markup: True
                    text: ""
                    text_size: self.width, None
                    padding: 15, 15
                    size_hint_y: None
                    height: self.texture_size[1]

<FindStockScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 2
            padding: 5, 40
            size_hint: 1, 0.15
            RelativeLayout:
                Button:
                    markup: True
                    text: "[color=#428BFC][b]Your stocks[/b][/color]"
                    background_color: 1,1,1,0
                    font_size: 0.22 * self.width
                    size_hint: 0.3, 0.3
                    pos_hint: {'center_x': 0.2, 'center_y': 0.7}
                    opacity: 1 if self.state == 'normal' else 0.5
                Button:
                    markup: True
                    text: "[color=#428BFC][b]News[/b][/color]"
                    background_color: 1,1,1,0
                    font_size: 0.22 * self.width
                    size_hint: 0.3, 0.3
                    pos_hint: {'center_x': 0.8, 'center_y': 0.7}
                    opacity: 1 if self.state == 'normal' else 0.5
                    on_press: root.mainScreen()
        GridLayout:
            cols: 2
            padding: 10, 0
            size_hint: 1, 0.5
            RelativeLayout:
                TextInput:
                    id: searchStock
                    hint_text: "Type stock"
                    font_size: 35
                    size_hint: 0.7, 0.2
                    padding: 15, 0
                    pos_hint: {'center_x': 0.35, 'center_y': 0.7}
                Button:
                    markup: True
                    text: "[color=#428BFC][b]Search[/b][/color]"
                    background_color: 1,1,1,0
                    font_size: 0.22 * self.width
                    size_hint: 0.3, 0.1
                    pos_hint: {'center_x': 0.85, 'center_y': 0.7}
                    opacity: 1 if self.state == 'normal' else 0.5
                    on_press: root.printStocks(searchText=root.ids.searchStock.text)
        GridLayout:
            cols: 1
            padding: 10, 0
            RelativeLayout:
                ScrollView:
                    id: stocksScrollView


                